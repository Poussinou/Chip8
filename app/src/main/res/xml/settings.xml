<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">

    <ListPreference
        android:key="@string/pref_speed"
        android:title="@string/settings_speed"
        android:entries="@array/speedEntries"
        android:entryValues="@array/speedValues"
        android:defaultValue="1" />

    <com.jaredrummler.android.colorpicker.ColorPreference
        android:defaultValue="@color/foreground"
        android:key="@string/pref_foreground_color"
        android:summary="@string/settings_foreground_color_description"
        android:title="@string/settings_foreground_color"
        app:cpv_dialogTitle="@string/settings_foreground_color" />

    <com.jaredrummler.android.colorpicker.ColorPreference
        android:defaultValue="@color/background"
        android:key="@string/pref_background_color"
        android:summary="@string/settings_background_color_description"
        android:title="@string/settings_background_color"
        app:cpv_dialogTitle="@string/settings_background_color" />

</PreferenceScreen>
